# A complete make file
NAME = school 
CC = gcc
SRC = main.c school.c
RM = rm -f
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

# %.o : %.c
#	$(CC) $(CFLAGS) -c $< $@

all: $(OBJ) 
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean 

re: oclean all
