CC = gcc
SRC = main.c school.c 
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
        $(RM) $(NAME)
        $(RM) *.o
        $(RM) *~
        $(RM) \#*
        $(RM) .\#*
        $(RM) .*.swp

oclean:
        $(RM) *.o

fclean: clean
        $(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

